<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".simple.MainActivity">

    <Button
        android:id="@+id/btn_camera_surfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="用surfaceView显示Camera" />

    <Button
        android:id="@+id/btn_camera_glSurfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="用GLSurfaceView显示Camera" />

    <Button
        android:id="@+id/btn_uvcCamera_glSurfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="用GLSurfaceView显示UVCCamera" />

</LinearLayout>